{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "task-build",
            "type": "shell",
            "command": "npx ts-node build.ts",
            "options": {
                "cwd": "${workspaceFolder}/icam-expert-backend"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
