{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "cwd": "${workspaceFolder}/icam-expert-backend", // Set the working directory
            "request": "launch",
            "name": "Debug Backend",
            "preLaunchTask": "task-build",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
